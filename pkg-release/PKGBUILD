# Maintainer: Lukas Heindl <oss.heindl@protonmail.com>
pkgname=playermgmt
pkgver=1.0.0
pkgrel=1
pkgdesc="A simple tool to start/stop media with one button (like on a headset)"
arch=('x86_64')
url="https://github.com/atticus-sullivan/playermgmt"
license=('MIT')
depends=("playerctl" "bash")
provides=("playermgmt")
conflicts=("playermgmt-dev")
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/${pkgver}.tar.gz")
sha256sums=('SKIP')

package() {
	cd "${pkgname}-${pkgver}"
	install -Dm755 "playermgmt.bash" "$pkgdir/usr/local/bin/playermgmt"
}
