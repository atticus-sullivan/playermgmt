# Maintainer: Lukas Heindl <oss.heindl@protonmail.com>
pkgname=playermgmt
pkgver=1.0.0
pkgrel=1
pkgdesc="A simple tool to start/stop media with one button (like on a headset)"
arch=('x86_64')
url="https://git.atticus-sullivan.de/wm-tools/playermgmt"
license=('MIT')
depends=("playerctl" "bash")
provides=("playermgmt")
conflicts=("playermgmt-dev")
source=("${pkgname}-${pkgver}::git+ssh://git@git.atticus-sullivan.de:3022/wm-tools/playermgmt.git#tag=${pkgver}")
sha256sums=('SKIP')

package() {
	cd "${pkgname}-${pkgver}"
	install -Dm755 "playermgmt.bash" "$pkgdir/usr/local/bin/playermgmt"
}
